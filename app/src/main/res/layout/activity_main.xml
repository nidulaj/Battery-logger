<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:gravity="center_vertical">

    <!-- Card Container for Buttons -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        android:translationZ="2dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <!-- Start Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/startBtn"
                android:text="Start Logging"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                app:cornerRadius="12dp"
                app:elevation="2dp"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:backgroundTint="#4CAF50"
                android:stateListAnimator="@null"
                android:foreground="?attr/selectableItemBackground"/>

            <!-- Stop Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/stopBtn"
                android:text="Stop Logging"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                app:cornerRadius="12dp"
                app:elevation="2dp"
                app:icon="@android:drawable/ic_media_pause"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:backgroundTint="#F44336"
                app:strokeColor="#E53935"
                app:strokeWidth="0dp"
                android:stateListAnimator="@null"
                android:foreground="?attr/selectableItemBackground"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Status Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:translationZ="2dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <!-- Status Row -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!-- Status Indicator Dot -->
                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/status_indicator"
                    android:alpha="0.8"/>

                <!-- Status Text -->
                <TextView
                    android:id="@+id/statusText"
                    android:text="Status: Idle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#37474F"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.01"/>

            </LinearLayout>

            <!-- Export Location Text (Initially Hidden) -->
            <TextView
                android:id="@+id/exportLocationText"
                android:text="CSV file will be exported to:\nInternal Storage/Documents/BatteryLogger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="13sp"
                android:textColor="#607D8B"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="2dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>